FROM python:3.12-slim

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Install Poetry
RUN curl -sSL https://install.python-poetry.org | python3 - && \
    ln -s /root/.local/bin/poetry /usr/local/bin/poetry

# Ensure Poetry is in PATH for the following RUN commands
ENV PATH="/root/.local/bin:$PATH"

# Copy only dependency files first (cache-friendly)
COPY pyproject.toml poetry.lock* /app/

# Install Poetry
RUN curl -sSL https://install.python-poetry.org | python3 -
ENV PATH="/root/.local/bin:$PATH"

RUN poetry --version


# Copy the rest of the app
COPY . /app

# Ensure static folder exists (not strictly required, but safe)
RUN mkdir -p /app/staticfiles

# Expose port
EXPOSE 8000

# Run migrations + collectstatic + start Gunicorn at container runtime
CMD ["sh", "-c", "python manage.py migrate --noinput && python manage.py collectstatic --noinput --clear && gunicorn --config gunicorn_config.py oc_lettings_site.wsgi:application"]
