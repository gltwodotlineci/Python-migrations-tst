FROM python:3.12-slim

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Install Poetry
RUN curl -sSL https://install.python-poetry.org | python3 - && \
    ln -s /root/.local/bin/poetry /usr/local/bin/poetry

# Ensure Poetry is in PATH
ENV PATH="/root/.local/bin:$PATH"

# Copy only dependency files first (cache-friendly)
COPY pyproject.toml poetry.lock* /app/

# Install Python dependencies system-wide (disable virtualenvs)
RUN poetry config virtualenvs.create false \
    && poetry install --no-interaction --no-ansi --no-root

# Copy the rest of the app
COPY . /app

# Expose port
EXPOSE 8000

# Run collectstatic **at container runtime**, not at build time
CMD ["sh", "-c", "\
    python manage.py migrate --noinput && \
    python manage.py collectstatic --noinput --clear --verbosity 2 && \
    gunicorn --config gunicorn_config.py oc_lettings_site.wsgi:application"]
